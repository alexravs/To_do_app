<h1> <%= @current_list.name() %> </h1>



<form action='/tasks' method="post" >
  <input type="hidden" name="id" value="<%= @id %>">

  <div class="form-group">
    <label for="new_task">Nouvelle tache: </label>
    <input id="new_task" name="description" class="form-control" type="text" placeholder="Qu'avez-vous à faire?" autofocus>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Insérer</button>
  </div>
</form>
<h1>Liste:</h1>
<% if @tasks.nil?.!() %>
  <ul id="task" class="list-group">
    <form action="edit_task" method="post">
    <% @tasks.each() do |task| %>
      <li class="list-group-item"><%= task.description() %> <input id='new_description' name='new_description' type='text'> <input  name='task_id' type='hidden' value="<%= task.id() %>"> <button type="submit" class="btn btn-danger" name="id" value="<%= @current_list.id() %>" >test</button> <a href="/delete_task/<%= task.id() %>/<%= @id %>"><span class="glyphicon glyphicon-trash pull-right" aria-hidden="true"></span></a>
</li> 
    <% end %> 
  </ul>
<% else %>
  <p>Il n'y a pas encore de tâche ici ...
<% end %>
<form action='/tasks_clear' method="post">
  
  <button type="submit" class="btn btn-danger" name="id" value="<%= @current_list.id() %>" >Nettoyer la liste!</button>
</form>





